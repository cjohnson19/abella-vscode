{
  "name": "abella-vscode",
  "displayName": "Abella",
  "description": "Language support for the Abella proof assistant",
  "license": "MIT",
  "keywords": [
    "Abella",
    "LF"
  ],
  "homepage": "https://abella-prover.org",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/cjohnson19/abella-vscode"
  },
  "bugs": {
    "url": "https://github.com/cjohnson19/abella-vscode/issues"
  },
  "author": "Chase Johnson <cjohnson19@pm.me>",
  "pricing": "Free",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "version": "0.2.3",
  "publisher": "abella-community",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Abella",
      "properties": {
        "abella.path": {
          "type": "string",
          "default": "abella",
          "description": "Path to the Abella executable"
        },
        "abella.autoOpen": {
          "type": "boolean",
          "description": "Automatically open the Abella output",
          "default": true
        },
        "abella.infoviewTheme": {
          "type": "string",
          "markdownDescription": "Specifies what theme to use for the syntax highlighting in the infoview. Supports themes from [Shiki](https://shiki.style/themes).",
          "default": "monokai"
        }
      }
    },
    "languages": [
      {
        "id": "abella",
        "aliases": [
          "Abella"
        ],
        "extensions": [
          ".thm"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "lf",
        "aliases": [
          "lf"
        ],
        "extensions": [
          ".lf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "abella",
        "scopeName": "source.abella",
        "path": "./syntaxes/abella.tmLanguage.json"
      },
      {
        "language": "lf",
        "scopeName": "source.lf",
        "path": "./syntaxes/lf.tmLanguage.json"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/abella-prover/abella-vscode"
    },
    "commands": [
      {
        "command": "abella.endProcess",
        "title": "Abella: End Process"
      },
      {
        "command": "abella.restart",
        "title": "Abella: Restart Extension"
      },
      {
        "command": "abella.showOutput",
        "title": "Abella: Show / Open Info view"
      },
      {
        "command": "abella.start",
        "title": "Abella: Start Extension"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:all": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "esbuild": "^0.24.0",
    "glob": "^10.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.6.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
