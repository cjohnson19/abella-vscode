{
  "name": "adelfa-vscode",
  "displayName": "Adelfa",
  "description": "Language support for the Adelfa proof assistant",
  "version": "0.1.0",
  "publisher": "adelfa-prover",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Adelfa",
      "properties": {
        "adelfa.path": {
          "type": "string",
          "default": "adelfa",
          "description": "Path to the Adelfa executable"
        },
        "adelfa.autoOpen": {
          "type": "boolean",
          "description": "Automatically open the Adelfa output",
          "default": true
        }
      }
    },
    "languages": [
      {
        "id": "adelfa",
        "aliases": [
          "Adelfa"
        ],
        "extensions": [
          ".ath"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "lf",
        "aliases": [
          "lf"
        ],
        "extensions": [
          ".lf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "adelfa",
        "scopeName": "source.adelfa",
        "path": "./syntaxes/adelfa.tmLanguage.json"
      },
      {
        "language": "lf",
        "scopeName": "source.lf",
        "path": "./syntaxes/lf.tmLanguage.json"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/adelfa-prover/adelfa-vscode"
    },
    "commands": [
      {
        "command": "adelfa.endProcess",
        "title": "Adelfa: End Process"
      },
      {
        "command": "adelfa.restart",
        "title": "Adelfa: Restart Extension"
      },
      {
        "command": "adelfa.showOutput",
        "title": "Adelfa: Show / Open Info view"
      },
      {
        "command": "adelfa.start",
        "title": "Adelfa: Start Extension"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p tsconfig.test.json",
    "watch-tests": "tsc -p tsconfig.test.json -w",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:all": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "lint-and-format": "npm run lint:fix && npm run format",
    "test": "vscode-test",
    "test:simple": "npm run compile && vscode-test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^10.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.6.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
